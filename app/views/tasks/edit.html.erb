<h1>Update task</h1>
<h2><%= @task.title %></h2>

<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <p>
    <%= f.check_box :completed %>
    <%= f.label :completed, 'Completed' %>
  </p>
  <%= f.submit class: 'btn btn-success form-control' %>
<% end %>

<p> <%= link_to 'Back to list', tasks_path %></p>
