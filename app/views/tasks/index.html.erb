<h1>Your tasks:</h1>
<p><%= link_to 'Add a new task', new_task_path %></p>
<% @tasks.each do |task| %>
  <p>
  <% if task.completed == false %>
    <i class="far fa-circle"></i>
  <% else %>
    <i class="far fa-check-circle"></i>
  <% end %>
  <%= link_to task.title, task_path(task) %>
  </p>
  <p>
    <%= link_to task_path(task), method: :delete, class: 'text-danger', data: { confirm: 'Are you sure?' } do %>
      <i class="fas fa-trash-alt"></i> Delete
    <% end %>
  </p>
<% end %>

